{
  "displayName": "Backend Tests",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/src/test/**/*.test.ts"],
  "testTimeout": 15000,
  "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
  "globalSetup": "<rootDir>/src/test/globalSetup.ts",
  "globalTeardown": "<rootDir>/src/test/globalTeardown.ts",
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": false,
        "tsconfig": {
          "moduleResolution": "node",
          "module": "commonjs",
          "target": "es2020",
          "skipLibCheck": true
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/test/**",
    "!src/**/*.d.ts",
    "!src/seeds/**",
    "!src/app.ts"
  ],
  "verbose": false,
  "detectOpenHandles": false,
  "forceExit": true,
  "maxWorkers": 1,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}
