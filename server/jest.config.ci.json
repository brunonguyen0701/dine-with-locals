{
  "displayName": "Backend CI Tests",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/src/test/models/*.test.ts",
    "**/src/test/controllers/WorkingController.test.ts",
    "**/src/test/integration/EssentialAPI.test.ts",
    "**/src/test/minimal.test.ts"
  ],
  "testTimeout": 15000,
  "setupFilesAfterEnv": ["<rootDir>/src/test/setup.ts"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": false,
        "tsconfig": {
          "moduleResolution": "node",
          "module": "commonjs",
          "target": "es2020"
        }
      }
    ]
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/test/**",
    "!src/**/*.d.ts"
  ],
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true
}
