# ===========================================
# SERVER TEST ENVIRONMENT VARIABLES
# ===========================================
# This file is used specifically for testing
# Ensures tests run safely without affecting production data

NODE_ENV=test

# ===========================================
# TEST DATABASE (IN-MEMORY)
# ===========================================
# This will be overridden by mongodb-memory-server in tests
MONGO_URI=mongodb://localhost:27017/test-database-memory

# ===========================================
# TEST AUTHENTICATION & SECURITY
# ===========================================
SECRET=test-jwt-secret-key-for-testing-only

# ===========================================
# TEST EXTERNAL APIS (MOCKED)
# ===========================================
GOOGLE_MAPS_API_KEY=test-google-maps-key
GOOGLE_AUTH_CLIENT_ID=test-google-client-id

# Cloudinary (disabled for tests)
CLOUDINARY_CLOUD_NAME=test-cloud
CLOUDINARY_API_KEY=test-key
CLOUDINARY_API_SECRET=test-secret

# ===========================================
# TEST SERVER CONFIGURATION
# ===========================================
PORT=3000
DISABLE_EXTERNAL_APIS=true
DISABLE_SOCKET_IO=true
DISABLE_CLOUDINARY=true

# ===========================================
# TEST FLAGS
# ===========================================
USE_MOCK_DATA=true
ENABLE_TEST_LOGS=false
MOCK_EMAIL_SERVICE=true
